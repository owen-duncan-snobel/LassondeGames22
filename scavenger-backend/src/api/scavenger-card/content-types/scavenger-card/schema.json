{
  "kind": "collectionType",
  "collectionName": "scavenger_cards",
  "info": {
    "singularName": "scavenger-card",
    "pluralName": "scavenger-cards",
    "displayName": "ScavengerCard"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "location": {
      "type": "text"
    },
    "clue": {
      "type": "text"
    },
    "difficultyRating": {
      "type": "enumeration",
      "enum": [
        "easy",
        "medium",
        "hard"
      ],
      "default": "easy",
      "required": true
    },
    "image": {
      "allowedTypes": [
        "images",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "fact": {
      "type": "text"
    },
    "badge": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    }
  }
}
